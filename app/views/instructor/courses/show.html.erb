<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <%= link_to 'Preview As Student...', course_path(@course), class: 'btn btn-warning pull-right' %>
  <br class="clr" />

  <%= link_to 'Add a new section...', new_instructor_course_section_path(@course), class: 'btn btn-primary btn-lg'%>
  <% if current_user && current_user = @course.user %>
     <%= link_to 'Destroy', instructor_course_path(@course), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %>
  <% end %>

  <ul>
    <% @course.sections.each do |section| %>
      <li>
        <%= section.title %>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'pull-right btn btn-primary btn-xs'%>
        <ul>
          <% section.lessons.each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
          <br class="clr"/>
        </ul>
      </li>
    <% end %>
  </ul>
</div>